              eraseCookie('incap_ses_${Proxy-ID}_${Site-ID}	');
              eraseCookie('incap_visid_${Proxy-ID}_${Site-ID}	');
              eraseCookie('nlbi_{ID}	');
              eraseCookie('smSession');
              eraseCookie('TS015217d5');
