<div class="container-fluid">
  <h1>Products</h1>
  <div class="list">
    <% cache(cache_key_for_products) do %>
      <% @products.each do |product| %>
          <%= render product %>
        <% end %>
    <% end %>
  </div>
  <div class="product_link">
    <%= link_to 'Add new Product', new_product_path %>
  </div>
</div>
