<div class="container">
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
      <div class="back_link">
        <%= link_to 'Back to product overview', products_path %>
      </div>
    </div>
    <div class="col-md-1">
    </div>
  </div>
  <div class="row product_detail">
    <div class="col-md-1">
    </div>
    <div class="col-md-5">
      <div class="product_detail_imagebox">
      <%= render partial: "productimage", locals: {product: @product} %>
      </div>
    </div>
    <div class="col-md-5">
      <h2>
        <%= @product.name %>
      </h2>
      <p>
        <%= @product.description %>
      </p>

      <p>
        <%= @product.colour %>
      </p>

      <strong>
        <%= @product.price %>â‚¬
      </strong>
    </div>
    <div class="col-md-1">
    </div>
  </div>

  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
      <h3>User Reviews</h3>
        <%= @product.highest_rating_comment %></br>
        <%= @product.lowest_rating_comment %>
    </div>
    <div class="col-md-1">
    </div>
  </div>
</div>
