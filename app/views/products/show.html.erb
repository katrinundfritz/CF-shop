<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="back_link">
        <%= link_to 'Back to product overview', products_path %>
      </div>
    </div>
    <div class="col-md-1">
    </div>
  </div>
  <div class="row product_detail">
    <div class="col-md-1">
    </div>
    <div class="col-md-5">
      <div class="product_detail_imagebox">
      <%= render partial: "productimage", locals: {product: @product} %>
      </div>
    </div>
    <div class="col-md-5">
      <h2>
        <%= @product.name %>
      </h2>
      <p>
        <%= @product.description %>
      </p>

      <p>
        <%= @product.colour %>
      </p>

      <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>

      <strong>
        <%= number_to_currency(@product.price, unit: "â‚¬", separator: ",", delimiter: "", format: "%n %u") %>
      </strong>

      <%= form_with(url: '/payments/create') do |form| %>
        <%= render partial: "shared/stripe_checkout_button" %>
      <% end %>

    </div>
  </div>

  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h3>User Reviews</h3>
        <%= render 'new_comment' %>
        <%= render 'comments' %>
        <%= will_paginate @comments %>
    </div>
  </div>
</div>
